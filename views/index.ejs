<!DOCTYPE html>
<html>
<head>
  <title>Sweet Inventory</title>
  <style>
    body { font-family: Arial; background: #f7f7f7; padding: 20px; }
    h1 { color: #2c3e50; text-align: center; }
    form { margin: 10px 0; }
    .card-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 10px; }
    .card { background: #fff; padding: 10px; border-radius: 5px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
    .card h3 { margin: 0 0 5px; }
    .card form { display: inline; }
    input[type="number"], input[type="text"], input[type="password"] { width: 80px; }
    button { margin: 2px; }
  </style>
</head>
<body>
  <h1>Sweet Inventory</h1>

  <h2>Add New Sweet</h2>
  <form method="POST" action="/add">
    <input type="number" name="id" placeholder="ID" required>
    <input type="text" name="name" placeholder="Name" required>
    <input type="text" name="category" placeholder="Category" required>
    <input type="number" name="price" placeholder="Price" required>
    <input type="number" name="quantity" placeholder="Qty" required>
    <button type="submit">Add</button>
  </form>

  <h2>Search Sweets</h2>
  <form method="GET" action="/">
    <input type="text" name="name" placeholder="Name">
    <input type="text" name="category" placeholder="Category">
    <input type="number" name="minPrice" placeholder="Min Price">
    <input type="number" name="maxPrice" placeholder="Max Price">
    <button type="submit">Search</button>
  </form>

  <h2>Inventory</h2>
  <div class="card-grid">
    <% sweets.forEach(sweet => { %>
      <div class="card">
        <h3><%= sweet.name %></h3>
        <p>Category: <%= sweet.category %></p>
        <p>Price: â‚¹<%= sweet.price %></p>
        <p>Quantity: <%= sweet.quantity %></p>

        <form method="POST" action="/delete/<%= sweet.id %>">
          <button type="submit">Delete</button>
        </form>

        <form method="POST" action="/purchase/<%= sweet.id %>">
          <input type="number" name="quantity" placeholder="Qty" required>
          <button type="submit">Purchase</button>
        </form>

        <form method="POST" action="/restock/<%= sweet.id %>">
          <input type="number" name="quantity" placeholder="Qty" required>
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit">Restock</button>
        </form>
      </div>
    <% }) %>
  </div>
</body>
</html>
