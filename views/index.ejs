<!DOCTYPE html>
<html>
<head>
  <title>Sweet Inventory</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/style.css">
</head>
<body class="bg-dark text-light" >
<div class="container py-4">

  <h1 class="text-center text-warning mb-4 fw-bold" >üç¨ Sweet Inventory üç≠</h1>

  <h2 class="text-info ">Add New Sweet</h2>
  <form method="POST" action="/add" class="row g-2 mb-4">
    <div class="col-md-3">
      <label class="form-label">Name</label>
      <input type="text" name="name" class="form-control custom-input" placeholder="Name" required>
    </div>
    <div class="col-md-3">
      <label class="form-label">Category</label>
      <select name="category" class="form-select custom-input" required>
        <option value="">-- Select Category --</option>
        <% categories.forEach(c => { %>
          <option value="<%= c %>"><%= c %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-2">
      <label class="form-label">Price</label>
      <input type="number" name="price" class="form-control  custom-input" placeholder="Price" required min="1">
    </div>
    <div class="col-md-2">
      <label class="form-label">Quantity</label>
      <input type="number" name="quantity" class="form-control custom-input" placeholder="Qty" required min="1">
    </div>
    <div class="col-md-2 d-flex align-items-end">
      <button type="submit" class="btn btn-success w-100">Add</button>
    </div>
  </form>

  <h2 class="text-info ">Search Sweets</h2>
  <form method="GET" action="/" class="row g-2 mb-4">
    <div class="col-md-2">
      <label class="form-label">Name</label>
      <input type="text" name="name" class="form-control custom-input" placeholder="Name">
    </div>
    <div class="col-md-2">
      <label class="form-label">Category</label>
      <select name="category" class="form-select custom-input">
        <option value="">-- Select Category --</option>
        <% categories.forEach(c => { %>
          <option value="<%= c %>"><%= c %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-2">
      <label class="form-label">Min Price</label>
      <input type="number" name="minPrice" class="form-control custom-input" placeholder="Min Price" min="0">
    </div>
    <div class="col-md-2">
      <label class="form-label">Max Price</label>
      <input type="number" name="maxPrice" class="form-control custom-input" placeholder="Max Price" min="0">
    </div>
    <div class="col-md-2 d-flex align-items-end">
      <button type="submit" class="btn btn-primary w-100">Search</button>
    </div>
  </form>

  <h2 class="text-info">Inventory</h2>
  <div class="row mt-4">
    <% sweets.forEach(sweet => { %>
      <div class="col-md-4 mb-4">
        <div class="card sweet-card h-100 shadow-lg">
          <div class="card-body">
            <h5 class="card-title text-warning"><%= sweet.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted">ID: <%= sweet.id %></h6>
            <p class="card-text">Category: <%= sweet.category %></p>
            <p class="card-text">Price: ‚Çπ<%= sweet.price %></p>
            <p class="card-text">Quantity: <%= sweet.quantity %></p>
          </div>
          <div class="card-footer d-flex justify-content-between">
            <button class="btn btn-sm btn-success shadow-sm" onclick="purchaseSweet(<%= sweet.id %>, <%= sweet.quantity %>)">Purchase</button>
            <button class="btn btn-sm btn-warning shadow-sm" onclick="showRestockModal(<%= sweet.id %>)">Restock</button>
            <button class="btn btn-sm btn-danger shadow-sm" onclick="showDeleteModal(<%= sweet.id %>)">Delete</button>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

</div>

<!-- Modals -->
 <div style="color: black;">
<div class="modal fade" id="restockModal" tabindex="-1">
  <div class="modal-dialog">
    <form id="restockForm" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title " style="color: black;" >Restock Sweet</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" name="id" id="restockId">
        <div class="mb-3">
          <label class="form-label">Quantity</label>
          <input type="number" name="quantity" class="form-control" required min="1">
        </div>
        <div class="mb-3">
          <label class="form-label">Password</label>
          <input type="password" name="password" class="form-control" required>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-warning">Restock</button>
      </div>
    </form>
  </div>
</div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <form id="deleteForm" class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title  " style="color: black;" >Delete Sweet</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" name="id" id="deleteId">
        <div class="mb-3">
          <label class="form-label">Password</label>
          <input type="password" name="password" class="form-control" required>
        </div>
        <p class="text-danger">Are you sure you want to delete this sweet?</p>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-danger">Delete</button>
      </div>
    </form>
  </div>
</div>

<!-- Toast -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
  <div id="actionToast" class="toast" role="alert">
    <div class="toast-body"></div>
  </div>
</div>

<script>
  function purchaseSweet(id, availableQty) {
    const qty = prompt('Enter quantity to purchase:');
    if (!qty) return;
    if (parseInt(qty) > availableQty) {
      alert("Not enough stock. Available quantity: " + availableQty);
      return;
    }
    fetch(`/purchase/${id}`, {
      method: 'POST',
      headers: {'Content-Type': 'application/x-www-form-urlencoded'},
      body: `quantity=${encodeURIComponent(qty)}`
    }).then(() => {
      showToast('Purchased successfully!');
      setTimeout(() => window.location.reload(), 1000);
    });
  }

  function showRestockModal(id) {
    document.getElementById('restockId').value = id;
    new bootstrap.Modal(document.getElementById('restockModal')).show();
  }

  function showDeleteModal(id) {
    document.getElementById('deleteId').value = id;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
  }

  document.getElementById('restockForm').addEventListener('submit', e => {
    e.preventDefault();
    const id = e.target.id.value;
    const qty = e.target.quantity.value;
    const password = e.target.password.value;
    if (password !== "restock123") {
      alert("Invalid password");
      return;
    }
    fetch(`/restock/${id}`, {
      method: 'POST',
      headers: {'Content-Type': 'application/x-www-form-urlencoded'},
      body: `quantity=${encodeURIComponent(qty)}&password=${encodeURIComponent(password)}`
    }).then(() => {
      bootstrap.Modal.getInstance(document.getElementById('restockModal')).hide();
      showToast('Restocked successfully!');
      setTimeout(() => window.location.reload(), 1000);
    });
  });

  document.getElementById('deleteForm').addEventListener('submit', e => {
    e.preventDefault();
    const id = e.target.id.value;
    const password = e.target.password.value;
    if (password !== "delete123") {
      alert("Invalid password");
      return;
    }
    fetch(`/delete/${id}`, {
      method: 'POST',
      headers: {'Content-Type': 'application/x-www-form-urlencoded'},
      body: `password=${encodeURIComponent(password)}`
    }).then(() => {
      bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
      showToast('Deleted successfully!');
      setTimeout(() => window.location.reload(), 1000);
    });
  });

  function showToast(message) {
    const toastEl = document.getElementById('actionToast');
    toastEl.querySelector('.toast-body').textContent = message;
    new bootstrap.Toast(toastEl).show();
  }
</script>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
    <%= error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

</body>
</html>
